
@using CNW_N8_MVC.Models;
@model dynamic

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách Hotel</div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Tên Địa Danh</th>
                            <th>Tên khách sạn</th>
                            <th>Địa điểm</th>
                            <th>Giá</th>
                            <th>Giá khuyến mãi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (hotel it in Model.hotels)
                        {
                            <tr id="row_@it.id">
                                <td>@it.location.location_name</td>
                                <td>@it.hotel_name</td>
                                <td>@it.location.location_name</td>
                                <td>@it.price</td>
                                <td>@it.sell_price</td>
                                <td><a href="@Url.Action("Edit","BackendHotel", new { @id = it.id})">Sửa</a></td>
                                <td><a onclick="deleteRowHotel(@it.id)" style="color:red">Xoá</a></td>
                                <td>
                                    <img height="50px" width="100px" src="@it.image_url" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/DeleteRowHotel.js"></script>