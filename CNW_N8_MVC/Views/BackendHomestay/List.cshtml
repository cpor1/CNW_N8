
@using CNW_N8_MVC.Models;
@model dynamic

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Backend.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách Homestay</div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Tên homestay</th>
                            <th>Địa điểm</th>
                            <th>Giá</th>
                            <th>Giá khuyến mãi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (homestay it in Model.homestays)
                        {
                            <tr>
                                <td>@it.homestay_name</td>
                                <td>@it.location.location_name</td>
                                <td>@it.price</td>
                                <td>@it.sell_price</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>