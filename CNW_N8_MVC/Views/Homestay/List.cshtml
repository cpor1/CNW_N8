@{
    ViewBag.Title = "HomestayList";
    Layout = "~/Views/Shared/List.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@{ string count = ViewData["count"] as String;}
@{ string homestays_Name = ViewData["homestays_Name"] as String;}
@{ string txtSearch = ViewData["txtSearch"] as String;}
@{ IEnumerable<CNW_N8_MVC.Models.homestay> optionList = ViewData["optionList"] as IEnumerable<CNW_N8_MVC.Models.homestay>;}
@model IPagedList<CNW_N8_MVC.Models.homestay>

<section class="main-content bg-white">
    <div class="reason-top">
        <div class="reason-top-opacity">
            <div class="container">
                <div class="reason-top-text">
                    <p class="fs32 text-white text-capitalize">Homestay</p>
                    <p class="fs12 text-white">Home > Homestay</p>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="container">
        <div class="accommodation-header pt-lg-5">
            <div class="accommodation-filter mt-4 position-relative">
                <div class="row">
                    <div class="col-sm-3">
                        <form method="get" action="/Location/SearchEngine">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <input name="txtSearch" type="text" class="form-control sc-input" placeholder="Search filered results" value="@txtSearch">
                                    <input type="submit" name="name" value="Search" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-5">
                        <p class="fs20 mt-2">@count Homestay được tìm thấy</p>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group ml-5">
                            <select name="" id="" class="selectpicker sc-input" data-live-search="true" title="Sort by:" data-width="100%" data-style="bg-white">
                                <option value="">Most popular</option>
                                <option value="">Price</option>
                                <option value="">Rate</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="sidebar">
                            <form>
                                <div class="form-row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="filter-price mt-3">
                                                <p class="text-red fs14">Price range</p>
                                                <p class="fs12 ml-2">0đ - 1,000,000đ</p>
                                                <div class="slidecontainer">
                                                    <input class="slider" id="slider" width="10%" />
                                                    <p class="fs13">Giá tiền:  <span id="value"></span>đ</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="row pt-3 pb-3">
                            @foreach (var it in Model)
                            {
                                <div class="col-sm-4">
                                    <div class="soutchai-item block-item">
                                        <a href="@Url.Action("Detail", "Homestay")">
                                            <div class="soutchai-item-img">
                                                <img src="@it.image_url" />
                                                <div class="top-left">
                                                    <i class="fas fa-map-marker-alt fs13"></i>
                                                    <span class="t_white">@it.location.location_name</span>
                                                </div>
                                            </div>
                                            <ul class="">
                                                <li class="position-relative">
                                                    <p class="title">@it.homestay_name</p>
                                                </li>
                                                <li class="price pt-2">
                                                    <p class="fs12 text-grey">
                                                        <del>@it.price đ/đêm</del>
                                                    </p>
                                                    <p>
                                                        <span class="latest_price color-main"><b>@it.sell_price đ/đêm</b></span>
                                                    </p>
                                                </li>
                                            </ul>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="sc-pagination pb-5">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
